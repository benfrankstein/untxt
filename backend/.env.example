# Server Configuration
PORT=8080
NODE_ENV=development

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=untxt
KMS_KEY_ID=arn:aws:kms:us-east-1:account:key/key-id

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ocr_platform_dev
DB_USER=ocr_platform_user
DB_PASSWORD=ocr_platform_pass_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_TEST_MODE=true

# Credits Configuration
INITIAL_USER_CREDITS=10
MIN_CREDIT_PURCHASE=10
CREDITS_PER_PAGE=1

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=change-this-to-a-long-random-string-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8080/api/auth/google/callback

# Email Configuration (for password reset)
# Two authentication methods supported:
# 1. App Password (simpler, less secure - good for development)
# 2. OAuth2 (more secure, recommended for production)

# Common SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=ben@untxt.ai
SMTP_FROM_ADDRESS=ben@untxt.ai
SMTP_FROM_NAME=untxt Support
SMTP_REPLY_TO=noreply@untxt.ai

# Method 1: App Password Authentication (default if SMTP_USE_OAUTH2=false)
# Guide: https://support.google.com/accounts/answer/185833
SMTP_PASS=your-gmail-app-password-here

# Method 2: OAuth2 Authentication (recommended for production)
# Set to 'true' to use OAuth2, 'false' or omit to use App Password
SMTP_USE_OAUTH2=false
# Get these from Google Cloud Console: https://console.cloud.google.com/
SMTP_OAUTH2_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
SMTP_OAUTH2_CLIENT_SECRET=your-google-oauth-client-secret
# Use the generate-oauth-token.js script to get this token
SMTP_OAUTH2_REFRESH_TOKEN=your-google-oauth-refresh-token
